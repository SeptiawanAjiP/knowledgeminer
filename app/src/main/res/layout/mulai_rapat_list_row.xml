<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/judul_rapat_row_mulai"
        android:textColor="@color/title"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rapat Pengolahan"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/pemimpin_rapat_mulai"
        android:layout_below="@id/judul_rapat_row_mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Upload"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tanggal_rapat_row_mulai"
        android:textColor="@color/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamis 17 Agustus 2016"
        android:layout_below="@+id/pemimpin_rapat_mulai"
        android:layout_alignRight="@+id/pemimpin_rapat_mulai"
        android:layout_alignEnd="@+id/pemimpin_rapat_mulai" />

</RelativeLayout>